Total comments: {{comments.length}}
Start: {{start}}
End: {{end}}

<div id="scrollable" style="width:300px; height:300px; overflow-y:scroll; border: 1px solid black;">
  {{#if hasEarlier}}
    {{scroll-loading-trigger
      onEnterViewport=(action "viewEarlier")
    }}
  {{/if}}
  {{#each viewable as |comment|}}
    {{comment-block comment=comment}}
  {{/each}}
  {{#if hasLater}}
    {{scroll-loading-trigger
      onEnterViewport=(action "viewLater")
    }}
  {{/if}}
</div>

<div {{action "viewStart"}}>View start</div>
<div {{action "viewEnd"}}>View end</div>
<div {{action "viewEarlier"}}>View earlier</div>
<div {{action "viewLater"}}>View later</div>


