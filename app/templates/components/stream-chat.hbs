Total comments: {{comments.length}}
Start: {{start}}
End: {{end}}

<div id="scrollable" style="width:300px; height:300px; overflow-y:scroll; border: 1px solid black;">
  <div class="comment-wrapper" style="display:flex; align-items:flex-end; ">
    <div class="spacer" style="width:1px;height:10000px;background:transparent;"></div>
    <div class="comments" style="flex: 1 1 auto; ">
      {{#each viewable as |comment index|}}
      <div style="border: 1px solid black; margin: 10px; height: 50px;" class="comment">{{comment.body}}</div>
      {{/each}}
    </div>
  </div>
</div>
<div {{action "viewEarlier"}}>View earlier</div>
<div {{action "viewLater"}}>View later</div>